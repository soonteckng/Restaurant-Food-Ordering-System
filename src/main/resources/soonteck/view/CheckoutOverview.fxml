<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="500.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="soonteck.view.CheckoutOverviewController">
    <children>
        <!-- Header -->
        <HBox alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-padding: 15;">
            <children>
                <Label text="ðŸ›’ CHECKOUT" textFill="#0619e9">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <!-- Order Summary -->
        <VBox spacing="10.0" style="-fx-background-color: #ffffff; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 15;">
            <children>
                <Label text="Order Summary" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <!-- Order Items Table -->
                <TableView fx:id="orderItemsTable" prefHeight="150.0">
                    <columns>
                        <TableColumn fx:id="itemNameColumn" prefWidth="150.0" text="Item" />
                        <TableColumn fx:id="itemQuantityColumn" prefWidth="60.0" text="Qty" />
                        <TableColumn fx:id="itemUnitPriceColumn" prefWidth="80.0" text="Unit Price" />
                        <TableColumn fx:id="itemTotalPriceColumn" prefWidth="80.0" text="Total" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <Separator />

                <!-- Totals -->
                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                    <children>
                        <VBox alignment="CENTER_RIGHT" spacing="5.0">
                            <children>
                                <Label text="Total Items:" textFill="#666666" />
                                <Label text="Total Calories:" textFill="#666666" />
                                <Label text="Subtotal:" textFill="#666666" />
                                <Label text="Tax (6%):" textFill="#666666" />
                                <Label text="Total Amount:" textFill="#333333">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_RIGHT" spacing="5.0">
                            <children>
                                <Label fx:id="totalItemsLabel" text="0" textFill="#333333" />
                                <Label fx:id="totalCaloriesLabel" text="0 kcal" textFill="#333333" />
                                <Label fx:id="subtotalLabel" text="RM 0.00" textFill="#333333" />
                                <Label fx:id="taxLabel" text="RM 0.00" textFill="#333333" />
                                <Label fx:id="totalAmountLabel" text="RM 0.00" textFill="#28a745">
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Payment Information -->
        <VBox spacing="10.0" style="-fx-background-color: #ffffff; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 15;">
            <children>
                <Label text="Payment Information" textFill="#333333">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label minWidth="100.0" text="Payment Method:" />
                        <ComboBox fx:id="paymentMethodComboBox" prefWidth="200.0" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label minWidth="100.0" text="Card Number:" />
                        <TextField fx:id="cardNumberField" prefWidth="200.0" promptText="1234 5678 9012 3456" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label minWidth="100.0" text="Card Holder:" />
                        <TextField fx:id="cardHolderField" prefWidth="200.0" promptText="John Doe" />
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="Expiry:" />
                                <TextField fx:id="expiryField" prefWidth="80.0" promptText="MM/YY" />
                            </children>
                        </HBox>
                        <HBox spacing="10.0">
                            <children>
                                <Label text="CVV:" />
                                <TextField fx:id="cvvField" prefWidth="60.0" promptText="123" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10;">
            <children>
                <Button onAction="#handleCancel" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Cancel" />
                <Button fx:id="processPaymentButton" onAction="#handleProcessPayment" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Process Payment" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
</VBox>