<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="soonteck.view.HomePageOverviewController">
   <children>
      <!-- Main Content Area - TabPane is now a child of AnchorPane -->
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <tabs>
            <!-- MENU TAB -->
            <Tab text="Menu ðŸ½ï¸">
               <content>
                  <VBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <!-- Header Section -->
                        <HBox alignment="CENTER" maxWidth="Infinity" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
                           <children>
                              <Label prefHeight="27.0" prefWidth="105.0" text="QuickDine" textFill="#0619e9">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>

                        <!-- Filter and Search Section -->
                        <VBox alignment="CENTER" maxWidth="Infinity" prefHeight="111.0" prefWidth="589.0" spacing="8.0" style="-fx-background-color: #ffffff; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5;">
                           <children>
                              <!-- First Row: Category and Search -->
                              <HBox alignment="CENTER" maxWidth="Infinity" spacing="15.0">
                                 <children>
                                    <Label minWidth="60.0" text="Category:" />
                                    <ComboBox fx:id="categoryComboBox" prefHeight="25.0" prefWidth="94.0" />
                                    <Button onAction="#handleShowAll" prefWidth="80.0" style="-fx-background-color: #6c757d; -fx-text-fill: white;" text="Show All" />
                                    <Region prefWidth="20.0">
                                       <padding>
                                          <Insets top="20.0" />
                                       </padding></Region>
                                    <Label minWidth="50.0" text="Search:" />
                                    <TextField fx:id="searchField" prefWidth="180.0" promptText="Search food..." />
                                 </children>
                                 <padding>
                                    <Insets top="-5.0" />
                                 </padding>
                              </HBox>

                              <!-- Second Row: Filter Buttons -->
                              <HBox alignment="CENTER" maxWidth="Infinity" spacing="15.0">
                                 <children>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="healthyFilterButton" onAction="#handleHealthyFilter" prefWidth="120.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Healthy Options" />
                                 </children>
                                 <padding>
                                    <Insets bottom="-5.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
                           </padding>
                        </VBox>

                        <!-- Food Items Table -->
                        <TableView fx:id="foodTable" maxWidth="Infinity" prefHeight="137.0" prefWidth="589.0" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="nameColumn" prefWidth="119.33331048488617" text="Food" />
                              <TableColumn fx:id="categoryColumn" prefWidth="96.66663360595703" text="Category" />
                              <TableColumn fx:id="priceColumn" prefWidth="76.66667175292969" text="Price (RM)" />
                              <TableColumn fx:id="caloriesColumn" prefWidth="88.6666259765625" text="Calories" />
                              <TableColumn fx:id="descriptionColumn" prefWidth="121.33331298828125" text="Description" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>

                        <!-- Add to Cart Section -->
                        <HBox alignment="CENTER" maxWidth="Infinity" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
                           <children>
                              <Label text="Selected Item:" />
                              <Label fx:id="selectedItemLabel" text="None selected" textFill="#666666" />
                              <Label text="Quantity:" />
                              <Spinner fx:id="quantitySpinner" editable="true" initialValue="1" max="10" min="1" prefWidth="70.0" />
                              <Button fx:id="addToCartButton" onAction="#handleAddToCart" style="-fx-background-color: #007bff; -fx-text-fill: white;" text="Add to Cart ðŸ›’" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Label fx:id="cartCountLabel" prefHeight="21.0" prefWidth="103.0" text="0 item(s) in Cart" textFill="#666666">
                                 <font>
                                    <Font size="14.0" />
                                 </font></Label>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>

            <!-- CART TAB -->
            <Tab text="Cart ðŸ›’">
               <content>
                  <VBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <!-- Cart Header -->
                        <HBox alignment="CENTER" maxWidth="Infinity" spacing="20.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
                           <children>
                              <Label text="ðŸ›’ YOUR SHOPPING CART" textFill="#0619e9">
                                 <font>
                                    <Font name="System Bold" size="16.0" />
                                 </font>
                              </Label>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button fx:id="clearCartButton" onAction="#handleClearCart" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Clear Cart" />
                           </children>
                        </HBox>

                        <!-- Cart Items Table -->
                        <TableView fx:id="cartTable" maxWidth="Infinity" prefHeight="250.0" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="cartItemColumn" prefWidth="200.0" text="Item" />
                              <TableColumn fx:id="cartQuantityColumn" prefWidth="80.0" text="Quantity" />
                              <TableColumn fx:id="cartPriceColumn" prefWidth="100.0" text="Price (RM)" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>

                        <!-- Cart Action Buttons -->
                        <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10;">
                           <children>
                              <Button onAction="#handleRemoveFromCart" style="-fx-background-color: #ffc107; -fx-text-fill: black;" text="Remove Selected" />
                              <Button onAction="#handleCalculateCalories" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" text="Calculate Total" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</AnchorPane>
